# view docker images list
  $ docker images
# build docker images
  $ docker build -t="user-name/repo-name:tag"
# remove docker images
  $ docker rmi [repo-name]

# view docker container list
  $ docker ps
# start docker container running in background
  $ docker run -d -P --name [container-name] [user-name/repository-name]:[tag]
# stop docker container
  $ docker stop [container id]
# remove docker container
  $ docker rm [container id]

# edit docker image
  $ sudo docker run -t -i [user-name/repository-name] /bin/bash
  	* install module ... remember the container ID!!!!!
  $ sudo docker commit -m "..." -a "..." [container id] [user-name/repository-name]

